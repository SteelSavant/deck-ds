{
  "name": "deck-ds",
  "version": "0.0.1",
  "description": "Decky plugin for launching dual-screen games from game mode on Steam Deck",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "build_all": "shx rm -rf dist && rollup -c && cargo build && mkdir -p bin && cp ./target/debug/deck-ds ./bin/backend && echo Done",

    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SteelSavant/deck-ds.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "deck"
  ],
  "author": "SteelSavant",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/SteelSavant/deck-ds/issues"
  },
  "homepage": "https://github.com/SteelSavant/deck-ds#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "16.14.0",
    "@types/webpack": "^5.28.0",
    "rollup": "^2.77.1",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "decky-frontend-lib": "^3.21.1",
    "react-icons": "^4.4.0",
    "usdpl-front": "file:src/usdpl_front"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
